<div class="box">
  <div class="container">
    <div class="row">
      <% @offers.each do |offer| %>
      <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
        <div class="box-part text-center">
          <i class="fa fa-instagram fa-3x" aria-hidden="true"></i>
          <div class="title">
            <h4><%= offer.advertiser_name %></h4>
          </div>
          <% if offer.premium %>
            <div class="text">
              <img src="https://www.teclasap.com.br/wp-content/uploads/2005/05/premium.png" width="45%" height="100%">
            </div>
          <% end %>
          <h3> <a href="<%= offer.url %>">Click Here!</a> </h3>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>
